.clear
  :clear both
form
  #leftlabel
    width: 30%
    float: left
    font-weight: bold
  #input_text_field
    width: 60%

#company_page
  strong
    font-weight: bold
  em
    font-style: italic
  table
    tr
      .photo
        width: 10%
      .name_url
        width: 10%
      .description
        width: 15%
      .company_page_name
        width: 10%
      td,th
        //border: 1px solid
  #company_page_top
    width: 100%
    border-bottom: 1px solid #FFD735
    #edit_company
      float: left
      margin-top: 10px
    #follow_company
      float:  right
      margin: 5px 0px
  #company_page_details
    input#submit
      background: none repeat scroll 0 0 #008000
      border: 4px solid #004500
      color: #FFFFFF
      cursor: pointer
      margin: 1em
      padding-left: 1em
      padding-right: 1em
      width: auto
    #company_details
      #company_image_office
        float: left
        width: 32%
        margin-right: 10px
        #company_avatar
          margin: 10px 0px 5px 0px
          border: 1px solid #A2A19B
          padding: 5px
        #company_office_addresses
          margin: 5px 0px 0px 0px
        #new_office_form
          pasotion: absolute
          margin: 0
          padding: 10px
          background: #FBFBF0
          border: solid #CCCCCC 2px
          z-index: 1000
          font-family: arial

      #company_form
        float: left
        width: 65%
        label
          font-weight: bold
        
      #company_identity
        float: left
        width: 25%
        margin-right: 10px
        #company_name_url, #company_industries, #compnay_description
          margin: 10px 0px 5px 0px
      #mission_and_history
        float: left
        width: 25%
        margin-right: 10px
        #company_core_value, #company_mission, #what_we_look_for, #company_jobs_future, #company_jobs_past
          margin: 10px 0px 5px 0px
      #company_followers_list
        float: left
        width: 14.4%
        #company_followers
          margin: 10px 0px 5px 0px