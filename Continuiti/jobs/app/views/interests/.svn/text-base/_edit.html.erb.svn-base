<style>
  .fieldWithErrors{
    display: inline;
  }
</style>

<div style="width:520px;padding: 40px 0 0 130px;">
  <% form_remote_for(@interest,
    :url => interest_path(@interest),
    :loading => "$('add_new_interest_form_process_ajax_loader').show()",
    :success => "$('add_new_interest_form_process_ajax_loader').hide()") do |f| %>
    <p>
    <div style="float:left;width:150px;"><b><%= f.label :name %>:</b></div>
    <span id="interest_name_cant_be_blank_0" style="display: none"><div style="float: right; width:350px; color: red">Name can't be blank</div></span>
    <span id="interest_name_must_unique_0" style="display: none"><div style="float: right; width:350px; color: red">Name must be uniqueness</div></span>
    <div style="float: right; width:350px;"><%= f.text_field :name, :id => "interest_0_name",
        :onchange => "validateFieldCantBeBlank('interest_0_name', 'interest_name_cant_be_blank_0')" %></div>
    <div style="clear:both;"></div>
  </p>
  <p>
  <div style="float:left;width:150px;vertical-align:top;" ></div>
  <div style="float:right;width:350px;"><%= submit_tag "Update", :onclick => "window.interestFormIndex = 0;return validateAllInterestFields()" %> or <%= link_to_function 'Cancel', "$(\"add_interest_form\").innerHTML = \"\"" %><span id="add_new_interest_form_process_ajax_loader" style="display: none"><%= image_tag "LoaderIcon.gif", :style => "width:15px" %></span></div>
  <div style="clear:both;"></div>
  </p>
<% end %>
</div>

