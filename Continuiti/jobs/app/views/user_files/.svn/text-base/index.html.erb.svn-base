<h1>Listing assets</h1>

<table>
  <tr>
    <th>Data file name</th>
    <th>Data content type</th>
    <th>Data file size</th>
    <th>Attachable</th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%=h asset.data_file_name %></td>
    <td><%=h asset.data_content_type %></td>
    <td><%=h asset.data_file_size %></td>
    <td><%=h asset.attachable %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New asset', new_asset_path %>