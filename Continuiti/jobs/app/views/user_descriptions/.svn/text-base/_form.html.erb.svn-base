<style>
  .fieldWithErrors{
    display: inline;
  }
</style>

<div style="width:520px;padding: 40px 0 0 130px;">
  <% form_remote_for(@user_description, :url => user_user_descriptions_path(current_user.id), :loading => "$('add_new_user_description_form_process_ajax_loader').show()", :success => "$('add_new_user_description_form_process_ajax_loader').hide()") do |f| %>
    <span id="error_message"><%= f.error_messages %></span>
    <p>
    <div style="float:left;width:150px;"><b><%= f.label :description %>:</b></div>
    <span id="user_description_description_cant_be_blank" style="display: none"><div style="float: right; width:370px; color: red">Description can't be blank</div></span>
    <div style="float: right; width:370px;"><%= f.text_area :description, :rows => 4, :onchange => "validateFieldCantBeBlank('user_description_description', 'user_description_description_cant_be_blank')" %></div>
    <div style="clear:both;"></div>
  </p>
  <p>
  <div style="float:left;width:150px;vertical-align:top;"></div>
  <div style="float:right;width:370px;"><%= submit_tag "Create", :onclick => "return validateAllUserDescriptionFields()" %> or <%= link_to_function 'Cancel', "$(\"add_user_description_form\").innerHTML = \"\";$('user_description_index_container').show()" %> <span id="add_new_user_description_form_process_ajax_loader" style="display: none"><%= image_tag "LoaderIcon.gif", :style => "width:15px" %></span></div>
  <div style="clear:both;"></div>
  </p>
  <%= f.hidden_field :user_id %>
<% end %>
</div>
